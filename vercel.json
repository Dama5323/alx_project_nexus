{
  "version": 2,
  "builds": [
    {
      "src": "graphql-server/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "social-feed/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/graphql",
      "dest": "/graphql-server/index.js",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/api/(.*)",
      "dest": "/graphql-server/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/social-feed"
    }
  ],
  "rewrites": [
    {
      "source": "/graphql",
      "destination": "/api/graphql"
    }
  ]
}